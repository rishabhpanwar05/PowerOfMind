<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.brahmakumari.powerofmind.ui.activity.EventsSingle">

    <RelativeLayout
        android:id="@+id/date_layout"
        android:layout_width="344dp"
        android:layout_height="wrap_content">

        <include layout="@layout/divider"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/events_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#ffffff"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:textAlignment="center" />

    </RelativeLayout>

    <TextView
        android:id="@+id/events_title"
        style="@android:style/Widget.DeviceDefault.Light.TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_layout"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="The heading is!"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="@color/colorFontDefault"
        android:textSize="23sp" />

    <RelativeLayout
        android:id="@+id/date_layout_1"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/events_title">

        <include layout="@layout/divider"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/events_venue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#ffffff"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:textAlignment="center" />

        </RelativeLayout>

    <WebView
        android:id="@+id/events_details"
        style="@android:style/Widget.DeviceDefault.Light.TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/date_layout_1"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Anger spoils the beauty of the soul, introversion regains it."
        android:textAlignment="textStart"
        android:textColor="@color/colorFontDefault"
        android:textSize="18sp" />

</RelativeLayout>
